
.noDetail {
    text-align: center;
    font-size: 28rpx;
    color: #666;
    padding-top: 100rpx;
    padding-bottom: 100rpx;
}

.zhuanlanDetail_bottom{
    width: 100%;
    height: 120rpx;
    border-top: 1rpx solid #e9e9e9;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #ffffff;
    z-index: 1
}
.zhuanlanDetail_bottom1{
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    width: 90%;
    margin: 20rpx auto;
    font-size: 32rpx;
    border-radius: 10rpx;
}

.bottom{
    height: 110rpx;
    border-top: 1rpx solid #e9e9e9;
    background: #f8f9fa;
}
.bottom_1{
    height: 110rpx;
    width: 100%;
    position: relative;
}
.bottom_1_1,.bottom_1_2,.bottom_1_3{
    position: absolute;
    top: 50%;
    transform:translateY(-50%);
    font-size: 28rpx;
}
.bottom_1_1{
    width: 60rpx;
    height: 60rpx;
    left: 30rpx;
}
.bottom_1_2{
    border-radius: 5rpx;
    width: 60%;
    border: 1rpx solid #e9e9e9;
    height: 68rpx;
    left: 120rpx;
    background: #ffffff;
    line-height: 68rpx;
}
.bottom_1_2 input{
    height: 100%;
    width: 95%;
    color: #333;
    margin-left: 5%;
}
.bottom_1_3{
    right: 30rpx;
    height: 70rpx;
    width: 110rpx;
    text-align: center;
    line-height: 70rpx;
    color: #ffffff;
    margin: 0;
    padding: 0;
}