<block wx:for="{{commentInfo}}" wx:for-item="item" wx:key=""><view class="bte9s p30 flex_start"><view class="pos pinglun1"><image class="pinglun1" mode="scaleToFill" src="{{item.publisher.avatar_url.thumb_small_url}}"></image><image wx:if="{{item.member.isMember}}" class="vip" src="https://www.haojian.cn/wximg/market/vip_{{item.member.grade}}.png"></image></view><view class="pinglun2 ml30"><view catchtap="{{detail.has_bought && detail.status === 'normal' || !hasColumn ? 'huifu' : ''}}" data-uid="{{item.publisher.id}}" data-uname="{{item.publisher.displayname}}" data-commentid="{{item.id}}"><view class="flex_start flex_items"><view class="f26 c6">{{item.publisher.displayname}}</view><view wx:if="{{item.rating}}" class="ml30 sdp flex_start"><block wx:for="{{item.grade}}" wx:key="" wx:for-item="img_url"><image src="{{img_url}}"></image></block></view></view><view class="f20 cc mt10">{{item.datetime}}</view><view class="pinglun2_3 f32 c3 pt30">{{item.content}}</view><view wx:if="{{item.attachments.length > 0}}" class="pinglun_img ptb20"><view class="pinglun_img_1 flex_warp"><view wx:for="{{item.attachments}}" wx:for-item="attachments" wx:key="" wx:for-index="idx"><image mode="scaleToFill" catchtap="seeBigImg" data-index="{{index}}" data-imgurl="{{attachments.original_url}}" src="{{attachments.thumb_medium_url}}"></image></view></view></view></view><view class="pinglun2_4 mt30 p20 f24" wx:if="{{item.replys && item.replys.count > 0}}"><block wx:for="{{item.replys.results}}" wx:for-item="replysItem" wx:key=""><view wx:if="{{index == 0}}" class="pinglun2_3" catchtap="{{detail.has_bought && detail.status === 'normal' || !hasColumn ? 'huifu' : ''}}" data-uid="{{replysItem.publisher.id}}" data-uname="{{replysItem.publisher.displayname}}" data-commentid="{{replysItem.id}}"><text class="c67">{{replysItem.publisher.displayname}}：</text><text class="c3">{{replysItem.content}}</text></view><view wx:else catchtap="{{detail.has_bought && detail.status === 'normal' || !hasColumn ? 'huifu' : ''}}" data-uid="{{replysItem.publisher.id}}" data-uname="{{replysItem.publisher.displayname}}" data-commentid="{{replysItem.id}}" class="pinglun2_3"><text class="c67">{{replysItem.publisher.displayname}}</text><text class="c3">回复</text><text class="c67">{{replysItem.ref_user.displayname}}</text><text class="c3">：{{replysItem.content}}</text></view></block><view class="viewMore txt_center c6 mt10" data-index="{{index}}" catchtap="gotolistPage" wx:if="{{item.replys.count > 5}}">查看更多>></view></view></view></view></block>