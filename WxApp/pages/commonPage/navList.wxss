.scroll-view_H {
    white-space: nowrap;
    width: 100%;
    background-color: #fff;
    border-top: 1rpx solid #e9e9e9;
    border-bottom: 1rpx solid #e9e9e9;
    overflow-x: auto;
}
.top_bar{
    height: 100rpx;
    overflow-y: hidden;
}
.topBar{
    height: 100rpx;
    overflow-y: hidden;
}
.navFxied {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    -webkit-animation: bounceInDown 1s;
    animation: bounceInDown 1s;
    background: #fff;
    z-index: 10;
}

.newsNavFxied {
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
    background: #fff;
    z-index: 10;
}

.top-bar-item {
    display: inline-block;
    padding: 0 45rpx;
    color: #333;
    line-height: 100rpx;
    position: relative;
}

.top-bar-item_line {
    position: absolute;
    width: 40rpx;
    height: 8rpx;
    border-radius: 4rpx;
    background: #ff8542;
    bottom: 8rpx;
    left: 50%;
    transform: translateX(-50%);
    display: none;
}

.top-bar-active {
    color: #ff8542;
}

.top-bar-active .top-bar-item_line {
    display: block;
}
