<!--start.wxml-->
<view class="container">
  <view class="remind-box" wx:if="{{remind}}">
    <image class="remind-img" src="/images/start/loading.gif"></image>
  </view>
  <block wx:else>
    <image class="title" src="/images/9.jpeg"></image>
    <view class="content">
      <view class="hd" style="transform:rotateZ({{angle}}deg);">
        <view class='logo'>
          <open-data type="userAvatarUrl"></open-data>
        </view>
        <image class="wave" src="/images/start/wave.png" mode="aspectFill"></image>
        <image class="wave wave-bg" src="/images/start/wave.png" mode="aspectFill"></image>
      </view>
      <view class="bd">
         <image class="smalltitle" src="/images/start/confirm-word1.png"></image>
        <view class="confirm-btn">
          <button type='primary' bindgetuserinfo="goToIndex" open-type="getUserInfo">立即体验</button>
        </view>
        <text class="copyright">© {{year}} Deyci 倾情出品</text>
      </view>
    </view>
  </block>
</view>